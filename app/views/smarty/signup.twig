<script src="public/smarty/js/vendors/jquery-jvectormap-de-merc.js"></script>
<script src="public/smarty/js/vendors/jquery-jvectormap-world-mill.js"></script>
<script src="public/smarty/js/vendors/circle-progress.min.js"></script>
<script src="public/smarty/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
<script src="public/smarty/js/core.js"></script>
<script type="text/javascript" src="public/smarty/plugins/jquery-toast/js/jquery.toast.js"></script>
<script src="public/smarty/plugins/emoji-picker/lib/js/config.js"></script>
<script src="public/smarty/plugins/emoji-picker/lib/js/util.js"></script>
<script src="public/smarty/plugins/emoji-picker/lib/js/jquery.emojiarea.js"></script>
<script src="public/smarty/plugins/emoji-picker/lib/js/emoji-picker.js"></script>
<script src="public/smarty/plugins/flags/js/docs.js"></script>
<script src="public/smarty/js/chart_template.js"></script>
<script src="public/smarty/js/process.js"></script>
<script src="public/smarty/js/general.js"></script>
   {% for lang in site['languages'] %}
    {% if lang['active'] %}
     <script src="https://www.google.com/recaptcha/api.js?hl={{ lang['code'] }}"></script>
     {% endif %}
