<html lang="tr">
<head>
  <base href="{{ site['url'] }}/">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Divinum - Register</title>
  <meta name="keywords" content="{{ site['keywords'] }}">
  <meta name="description" content="{{ site['description'] }}">
  {% if site['favicon'] %}
    <link rel="shortcut icon" type="image/ico" href="{{ site['favicon'] }}" />
  {% endif %}
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="mobile-web-app-capable" content="yes">
	<meta name="HandheldFriendly" content="True">
	<meta name="MobileOptimized" content="320">
	<link rel="stylesheet" href="public/smarty/plugins/font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext">
	<script src="public/smarty/js/vendors/jquery-3.2.1.min.js"></script>
	<link href="public/smarty/css/core.css" rel="stylesheet">
	<link href="public/smarty/plugins/charts-c3/c3.css" rel="stylesheet">
	<script src="public/smarty/plugins/charts-c3/d3.v3.min.js"></script>
	<script src="public/smarty/plugins/charts-c3/c3.min.js"></script>
	<link rel="stylesheet" type="text/css" href="public/smarty/plugins/jquery-toast/css/jquery.toast.css">
	<link rel="stylesheet" href="public/smarty/plugins/boostrap/colors.css" id="theme-stylesheet">
	<link rel="stylesheet" href="public/smarty/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css" id="theme-stylesheet">
	<link href="public/smarty/plugins/emoji-picker/lib/css/emoji.css" rel="stylesheet">
	<link href="public/smarty/css/util.css" rel="stylesheet">
	<link href="public/smarty/css/layout.css" rel="stylesheet">
	<link href="public/smarty/css/footer.css" rel="stylesheet">
  <link href="public/smarty/pergo/theme_style.css?v=3" rel="stylesheet">
</head>
<center>
  <body class="">
    <div class="auth-login-form">
  <div class="form-login">
    <form action="" method="post">
      <div>
        <div class="card-title text-center">
          <div class="site-logo">

               <h4 style="color: white; font-family: impact; font-size:40px;">Divinum - Register</h4>
              
          </div>
        </div>
        {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert"></button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert"></button>
          {{ successText }}
        </div>
      {% endif %}
        <div class="form-group">
              <div class="input-icon mb-3">
                <span class="input-icon-addon">
                  <i class="fe fe-user"></i>
                </span>
                <input type="text" class="form-control" name="name" value="{{ data['name'] }}" placeholder="Name Surname" required>
              </div>


           <div class="input-icon mb-3">
            <span class="input-icon-addon">
              <i class="fa fa-user"></i>
            </span>
            <input type="text" class="form-control" name="username" value="{{ data['username'] }}" placeholder="Username" required>
          </div>  
          
          <div class="input-icon mb-3">
            <span class="input-icon-addon">
              <i class="fe fe-mail"></i>
            </span>
            <input type="email" class="form-control" name="email" value="{{ data['email'] }}" placeholder="E-Mail" required>
          </div>  
          
                      
                
          <div class="input-icon mb-3">
            <span class="input-icon-addon">
              <i class="fa fa-phone"></i>
            </span>
            <input type="phone" class="form-control" name="telephone" value="{{ data['telephone'] }}" placeholder="Telephone" required>
          </div>    

          <div class="input-icon mb-3">
            <span class="input-icon-addon">
              <i class="fa fa-key"></i>
            </span>
            <input type="password" class="form-control" name="password" placeholder="Password" required>
          </div>
          <div class="input-icon mb-3">
            <span class="input-icon-addon">
              <i class="fa fa-key"></i>
            </span>
            <input type="password" class="form-control" name="password_again" placeholder="Confirm Password" required>
          </div>
        
        </div>
         
        <div class="form-group">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" name="terms" class="custom-control-input" />
            <span class="custom-control-label" style="color: white;">I checked my information. &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<center></span>
          </label>
        </div>
        

         {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}

        <div class="form-footer">
          <button type="submit" class="btn btn-pill btn-2 btn-block btn-submit btn-gradient">Register</button>
        </div>
      </div>
    </form>
    <div class="text-center text-muted m-t-20">Do you have another account? <a href="signin">Log in</a><br><br>
    <a href="/">Go to Home!</a>
    </div>
  </div>
</div>

        
<script src="public/smarty/js/vendors/bootstrap.bundle.min.js"></script>
<script src="public/smarty/js/vendors/jquery.sparkline.min.js"></script>
