  <body class="">
    <div class="auth-login-form">
  <div class="form-login">
    <form action="" method="post">
      <div>
        <div class="card-title text-center">
          <div class="site-logo">
            
               <h4 style="color: white; font-family: impact; font-size:40px;">Divinum - Reset Password</h4>
              
          </div>
          
        </div>
        {% if errorText %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ errorText }}
        </div>
      {% endif %}
      {% if successText %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ successText }}
        </div>
      {% endif %}
          <div class="input-icon mb-5">
            <span class="input-icon-addon">
              <i class="fe fe-user"></i>
            </span>
            <input type="text" class="form-control" name="user" {{ data['user'] }} placeholder="Username or E-Mail Adress" required>
          </div>
          <div class="form-group">
            <label for="username" class="control-label" style="color: #fff;"><b>My New Password</b></label><br>
            <select class="form-control" name="type">
             {% for reset in resetType %}
              <option value="{{ reset['type'] }}">Send to my e-mail address</option>
             {% endfor %}
            </select>
          </div>

         {% if captcha %}
            <div class="form-group">
              <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
            </div>
          {% endif %}
        
        <div class="form-footer">
          <button type="submit" class="btn btn-pill btn-2 btn-block btn-submit btn-gradient" style="color: white;">Reset Password</button>
        </div>
      </div>
    </form>
     <div class="text-center text-muted m-t-20">Go to <a href="/">Home!</a></div>
     <div class="text-center text-muted m-t-20"><a href="signin">Log In</a></div>
</div>

